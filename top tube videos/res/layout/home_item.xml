<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_margin="5dp"
        android:layout_weight="0.1"
        android:textSize="18sp"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/lprogress"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5sp"
        android:layout_weight="0.6"
        android:background="#CCCCCC"
        android:visibility="visible" >

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_gravity="center"
            android:layout_weight="0.04" />
    </LinearLayout>

    <ImageView
        android:id="@+id/photo"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5sp"
        android:layout_weight="0.6"
        android:background="@drawable/search_bg_shadow"
        android:scaleType="fitCenter"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_margin="5sp"
        android:layout_weight="0.1"
        android:background="@drawable/cards_greenborder"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/typenew"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="2sp"
            android:layout_marginTop="1sp"
            android:layout_weight="0.33"
            android:background="@drawable/cards_greenborder_boton"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_video" />

        <ImageView
            android:id="@+id/favoritnew"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="2dp"
            android:layout_marginTop="1dp"
            android:layout_weight="0.33"
            android:background="@drawable/cards_greenborder_boton"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_not_important" />

        <ImageView
            android:id="@+id/sharenew"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="2dp"
            android:layout_marginTop="1dp"
            android:layout_weight="0.33"
            android:background="@drawable/cards_greenborder_boton"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_share" />
    </LinearLayout>

    <TextView
        android:id="@+id/description"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_margin="5sp"
        android:layout_weight="0.1"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@android:color/black" />

    <!-- <com.google.android.gms.ads.AdView -->


    <!-- android:id="@+id/adView" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- ads:adSize="SMART_BANNER" -->
    <!-- ads:adUnitId="ca-app-pub-4119124434647891/4933103168" /> -->

</LinearLayout>