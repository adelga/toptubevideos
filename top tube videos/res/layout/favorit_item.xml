<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_bg_shadow"
    android:orientation="vertical"
    android:padding="2dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6sp"
        android:layout_marginRight="6sp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="4sp"
            android:layout_weight="80"
            android:text="Dog dfsfsdfasdfadfadfadfdaffa sdasd Tag"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#040404"
            android:textStyle="bold"
            android:typeface="sans" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:background="@drawable/search_bg_shadow" >

        
        <ImageView
            android:id="@+id/list_image"
            android:layout_width="match_parent"
            android:layout_height="180sp"
            android:layout_weight="0.04"
            android:scaleType="fitCenter"
            android:src="@drawable/fondohome"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lprogress"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:background="#CCCCCC"
            android:visibility="visible" >

            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_gravity="center"
                android:layout_weight="0.04" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="2dp"
            android:layout_marginTop="1dp"
            android:layout_weight="0.7"
            android:background="@drawable/cards_greenborder_boton"
            android:gravity="center_vertical"
            android:text="Create an NFC Pet Tag"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/secondary_text_dark"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/type"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="1dp"
            android:layout_weight="0.1"
            android:background="@drawable/cards_greenborder_boton"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_video" />

        <ImageView
            android:id="@+id/favorit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="1dp"
            android:layout_weight="0.1"
            android:background="@drawable/cards_greenborder_boton"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_not_important" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="1dp"
            android:layout_weight="0.1"
            android:background="@drawable/cards_greenborder_boton"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_share" />
    </LinearLayout>

</LinearLayout>